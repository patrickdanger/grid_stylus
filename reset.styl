// This is a sassified version of Eric Meyer's latest reset.css
// http://meyerweb.com/eric/thoughts/2008/01/15/resetting-again/

reset_box(n = 0)
	margin n
	padding n
	border n
	outline n
	font-size 100%
	vertical-align baseline
	background transparent
	
html
	reset_box(0)

body
	reset_box(0)
	line-height 1

div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p
	reset_box(0)

blockquote
	reset_box(0)
	quotes none

pre, a, abbr, acronym, address, big, cite, code
	reset_box(0)

del
	reset_box(0)
	text-decoration line-through

dfn, em, font, img
	reset_box(0)

ins
	reset_box(0)
	text-decoration none

kbd
	reset_box(0)

q
	reset_box(0)
	quotes none

s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd
	reset_box(0)

ol, ul
	reset_box(0)
	list-style none

li, fieldset, form, label, legend
	reset_box(0)

table
	reset_box(0)
	border-collapse collapse
	border-spacing 0

caption, tbody, tfoot, thead, tr, th, td
	reset_box(0)

*:focus
	outline 0